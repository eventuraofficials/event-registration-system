{
  "env": {
    "node": true,
    "es2021": true,
    "browser": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["warn", { "allow": ["error", "warn", "info"] }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-eval": "error",
    "no-implied-eval": "error",
    "prefer-const": "warn",
    "no-var": "warn",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "no-throw-literal": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    "data/",
    "uploads/",
    "backups/",
    "audit-output/"
  ]
}
